@model Movie

@{
    ViewData["Title"] = "Movie Info";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <h2>Movie Information</h2>
        <form method="post">
            <input type="hidden" asp-for="MovieId" />

            <div class="form-group">
                <label asp-for="CategoryId">Category*</label>
                <select asp-for="CategoryId" class="form-control">
                    <option value="">Select a category</option>
                    @foreach (Category c in ViewBag.Categories)
                    {
                        <option value="@c.CategoryId">@c.CategoryName</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="Title">Title*</label>
                <input asp-for="Title" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="Year">Year*</label>
                <input asp-for="Year" class="form-control" min="1888" required />
            </div>

            <div class="form-group">
                <label asp-for="Director">Director</label>
                <input asp-for="Director" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Rating">Rating*</label>
                <select asp-for="Rating" class="form-control" required>
                    <option value="">Select a rating</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                    <option value="NR">NR (Not Rated)</option>
                    <option value="TV-PG">TV-PG</option>
                    <option value="TV-Y7">TV-Y7</option>
                    <option value="TV-14">TV-14</option>
                    <option value="UR">UR (Unrated)</option>
                </select>
            </div>


            <div class="form-group">
                <label asp-for="Edited">Edited*</label>
                <select asp-for="Edited" class="form-control" required>
                    <option value="" selected disabled>Select an option</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="CopiedToPlex">Copied to Plex*</label>
                <select asp-for="CopiedToPlex" class="form-control" required>
                    <option value="" selected disabled>Select an option</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="LentTo">Lent To</label>
                <input asp-for="LentTo" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Notes">Notes</label>
                <input asp-for="Notes" class="form-control" />
            </div>


            <br />
            <br />

            <button type="submit" class="btn btn-primary">Submit</button>

            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>